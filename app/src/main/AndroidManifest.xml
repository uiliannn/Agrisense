<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="startup.androidapp.agrisense.formulario">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_icrud"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="startup.androidapp.agrisense.formulario.Views.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="startup.androidapp.agrisense.formulario.Views.MainActivity"
            android:screenOrientation="portrait"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="startup.androidapp.agrisense.formulario.Views.FormActivity"
            android:screenOrientation="portrait"
            android:label="Formulario"
            android:parentActivityName="startup.androidapp.agrisense.formulario.Views.MainActivity" />
        <activity
            android:name="startup.androidapp.agrisense.formulario.Views.DetailActivity"
            android:screenOrientation="portrait"
            android:label="Detalhes" />


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>